<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginBottom="-170dp"
    android:layout_marginTop="170dp"
    android:orientation="vertical">

    <!-- CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="-5dp"
        app:cardCornerRadius="25dp"
        android:background="#FFFFFF"
        android:elevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Left Icon -->
            <ImageView
                android:id="@+id/shopIcon"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/circle_background"
                android:padding="8dp"
                android:layout_marginEnd="16dp" />


            <!-- Text Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/cameraIp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="192.168.1.1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/cameraUsername"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/montserrat_light"
                    android:layout_height="wrap_content"
                    android:text="Username : admin"
                    android:layout_marginTop="-0dp"
                    android:textSize="18sp"
                    android:textColor="#B1B1B1" />
            </LinearLayout>

            <!-- Delete Icon -->
            <ImageView
                android:id="@+id/deleteIcon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="-30dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/poubelle"
                android:layout_gravity="center_vertical"
                android:padding="4dp" />

            <!-- Configure Button -->
            <ImageButton
                android:id="@+id/configureButton"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/dell"
                android:scaleType="centerInside"
                android:background="@null"
                android:contentDescription="Configure" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>